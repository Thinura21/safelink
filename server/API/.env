PORT=4000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/safelink_v3

# JWT (SET REAL RANDOM VALUES IN PROD)
JWT_SECRET=super_secret_jwt_key_here
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=super_secret_refresh_here
JWT_REFRESH_EXPIRE=30d

# Uploads
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=104857600
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,webp

# Rate limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX=120

# Security
BCRYPT_ROUNDS=12
CORS_ORIGIN=http://localhost:3000,http://localhost:5173
